{% extends 'base.html.twig' %}

{% block title %}Les emprunteur{% endblock %}

{% block body %}
    {{ parent() }}

    <main class="">
        {% for borrower in borrowers %}
            <h1 class="titleBook center marg_30">{{ borrower.firstname }} {{ borrower.lastname }}</h1>
            <div class="container center_flex width_50">
                <p class="grey"><span class="blue">Email : </span>{{ borrower.email }}</p>
                <div class="flexColumn">
                    <div class="marg_30">
                        <a class="update" href="/borrower/update/{{ borrower.id }}">Modifier<i class="fa-solid fa-pen-to-square marg_30_rl"></i></a>
                    </div>
                    <div class="marg_30">
                        <a class="delete" href="/borrower/delete/{{ borrower.id }}">Supprimer<i class="fa-solid fa-delete-left marg_30_rl"></i></a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </main>
{% endblock %}
