{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
    {{ parent() }}

    <main class="width_80">
        <a class="add" href="/category/add">Ajouter une cat√©gorie</a>
        <div class="marg_30 container">
            {% for category in categorys %}
                <div class="category_color">
                    <a href="/category-book/{{ category.id }}" >
                        <p>{{ category.name }}</p>
                    </a>
                </div>

                <div class="marg_30 flexRow">
                    <div class="marg_30_rl">
                        <a class="update" href="/category/update/{{ category.id }}"><i class="fa-solid fa-pen-to-square"></i></a>
                    </div>
                    <div class="marg_30_rl">
                        <a class="delete" href="/category/delete/{{ category.id }}"><i class="fa-solid fa-delete-left"></i></a>
                    </div>
                </div>
            {% endfor %}
        </div>

    </main>
{% endblock %}
