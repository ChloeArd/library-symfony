{% extends 'base.html.twig' %}

{% block title %}
    {% if categorys is not empty %}
        {{ categorys.0.shelf.name}}
    {% endif %}
{% endblock %}

{% block body %}
    {{ parent() }}

    <main class="width_80">
        {% if categorys is not empty%}
            <h1 class="center">{{ categorys.0.shelf.name}}</h1>
            <a class="add" href="/category/add">{% trans %}Add a category{% endtrans %}</a>
            <div class="marg_30 container">
                {% for category in categorys %}
                    <div class="category_color">
                        <a href="/category-book/{{ category.id }}" >
                            <p>{{ category.name }}</p>
                        </a>
                    </div>

                    <div class="marg_30 flexRow">
                        <div class="marg_30_rl">
                            <a class="update" href="/category/update/{{ category.id }}"><i class="fa-solid fa-pen-to-square"></i></a>
                        </div>
                        <div class="marg_30_rl">
                            <a class="delete" href="/category/delete/{{ category.id }}"><i class="fa-solid fa-delete-left"></i></a>
                        </div>
                    </div>
                {% endfor %}
            </div>
            {% else %}
                <div class="marg_30">
                    <a class="add" href="/category/add">{% trans %}Add a category{% endtrans %}</a>
                </div>
                <p><p>{% trans %}There are no categorys at the moment{% endtrans %}!</p></p>
        {% endif %}


    </main>
{% endblock %}
